<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/actionBarBackground"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/boxBackground"
                android:columnCount="1"
                android:padding="10dp" >

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF"
                    android:columnCount="3"
                    android:padding="10dp"
                    android:rowCount="3" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:src="@drawable/icon_transactional" />

                    <TextView
                        android:id="@+id/accountNameTV"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="2"
                        android:layout_row="0"
                        android:padding="2dp"
                        android:text="Complete Access"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/accountNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="2"
                        android:layout_row="1"
                        android:padding="2dp"
                        android:text="0 00   0 00 0000 "
                        android:textColor="@color/greyText"
                        android:textSize="10dp" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_columnSpan="3"
                        android:layout_row="2"
                        android:background="@color/grayBackground" >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                           <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1.0"
                                android:background="@color/grayBackground"
                                android:text="@string/available_funds"
                                android:textAlignment="center"
                                android:textColor="@color/greyText"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/availableFundsTV"
                                android:layout_width="wrap_content"
                                android:background="@color/grayBackground"
                                android:padding="2dp"
                                android:text="00$"
                                android:textColor="@color/greyText"
                                android:textSize="10dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1.0"
                                android:background="@color/grayBackground"
                                android:text="@string/available_balance"
                                android:textAlignment="center"
                                android:textColor="@color/greyText"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/availableBalanceTV"
                                android:layout_width="wrap_content"
                                android:background="@color/grayBackground"
                                android:padding="2dp"
                                android:text="00$"
                                android:textColor="@color/greyText"
                                android:textSize="10dp" />
                        </TableRow>
                    </TableLayout>
                </GridLayout>
            </GridLayout>

            <TableLayout
                android:id="@+id/transTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>